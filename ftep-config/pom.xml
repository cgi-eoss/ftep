<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		 xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>com.cgi.eoss</groupId>
		<artifactId>f-tep</artifactId>
		<version>1.0.0-SNAPSHOT</version>
	</parent>

	<groupId>com.cgi.eoss.f-tep</groupId>
	<artifactId>ftep-config</artifactId>
	<packaging>rpm</packaging>

	<dependencies>
		<dependency>
			<groupId>com.cgi.eoss.f-tep.subsys.core</groupId>
			<artifactId>ftep-subsys-core-utils</artifactId>
			<version>1.0.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>com.cgi.eoss.f-tep.subsys.core</groupId>
			<artifactId>ftep-subsys-core-requesthandler</artifactId>
			<version>1.0.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>com.cgi.eoss.f-tep.subsys.core</groupId>
			<artifactId>ftep-subsys-core-wpswrapper</artifactId>
			<version>1.0.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>com.cgi.eoss.f-tep.subsys.datamanager</groupId>
			<artifactId>ftep-subsys-datamanager-core</artifactId>
			<version>1.0.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>com.cgi.eoss.f-tep.subsys.core</groupId>
			<artifactId>ftep-subsys-core-demoprocessor</artifactId>
			<version>1.0.0-SNAPSHOT</version>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>rpm-maven-plugin</artifactId>
				<version>2.1.5</version>
				<extensions>true</extensions>
				<configuration>
					<name>f-tep-processors</name>
					<group>Applications/TEP</group>
					<targetVendor>F-TEP</targetVendor>
					<requires>
						<require>zoo-kernel = 1.5.0</require>
					</requires>
					<mappings>
						<mapping>
							<directory>/usr/lib/cgi-bin</directory>
							<directoryIncluded>false</directoryIncluded>
							<recurseDirectories>false</recurseDirectories>
							<configuration>true</configuration>
							<filemode>644</filemode>
							<username>root</username>
							<groupname>root</groupname>
							<sources>
								<source>
									<location>src/main/01-Zoo/processors</location>
								</source>
							</sources>
						</mapping>
						<mapping>
							<directory>/usr/lib/cgi-bin/jars</directory>
							<directoryIncluded>true</directoryIncluded>
							<configuration>false</configuration>
							<filemode>644</filemode>
							<username>root</username>
							<groupname>root</groupname>
							<dependency>
								<includes>
									<include>com.cgi.eoss.f-tep.subsys.core:ftep-subsys-core-utils</include>
									<include>com.cgi.eoss.f-tep.subsys.core:ftep-subsys-core-requesthandler</include>
									<include>com.cgi.eoss.f-tep.subsys.core:ftep-subsys-core-wpswrapper</include>
									<include>com.cgi.eoss.f-tep.subsys.datamanager:ftep-subsys-datamanager-core</include>
									<include>com.cgi.eoss.f-tep.subsys.core:ftep-subsys-core-demoprocessor</include>
								</includes>
							</dependency>
						</mapping>
					</mappings>
				</configuration>
			</plugin>
		</plugins>
	</build>

</project>