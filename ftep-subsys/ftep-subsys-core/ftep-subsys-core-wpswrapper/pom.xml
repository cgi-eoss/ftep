<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>com.cgi.eoss.f-tep.subsys</groupId>
		<artifactId>ftep-subsys-core</artifactId>
		<version>1.0.0-SNAPSHOT</version>
	</parent>
	<groupId>com.cgi.eoss.f-tep.subsys.core</groupId>
	<artifactId>ftep-subsys-core-wpswrapper</artifactId>
	<name>FTEP :: Subsystems :: Core Controller (CEC) :: WPS Wrapper</name>
	<!-- <dependencies> <dependency> <groupId>org.zoo.project</groupId> <artifactId>zoo</artifactId> 
		<version>1.0</version> </dependency> </dependencies> -->
	<dependencies>
		<dependency>
			<groupId>com.github.docker-java</groupId>
			<artifactId>docker-java</artifactId>
			<version>${docker.java.version}</version>
		</dependency>
		<dependency>
			<groupId>com.cgi.eoss.f-tep.subsys.core</groupId>
			<artifactId>ftep-subsys-core-requesthandler</artifactId>
			<version>1.0.0-SNAPSHOT</version>
		</dependency>
		<!-- <dependency> -->
		<!-- <groupId>com.cgi.eoss.f-tep.subsys.core</groupId> -->
		<!-- <artifactId>ftep-subsys-core-utils</artifactId> -->
		<!-- <version>1.0.0-SNAPSHOT</version> -->
		<!-- </dependency> -->

	</dependencies>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-assembly-plugin</artifactId>
				<version>2.6</version>
				<executions>
					<execution>
						<id>create-executable-jar</id>
						<phase>package</phase>
						<goals>
							<goal>single</goal>
						</goals>
						<configuration>
							<descriptors>
								<descriptor>${basedir}/etc/assembly.xml</descriptor>
							</descriptors>
							<finalName>${project.build.finalName}</finalName>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>